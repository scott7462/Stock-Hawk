<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLWidget"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frg_home_height_quote_items"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/default_large_size"
    android:paddingRight="@dimen/default_large_size">

    <TextView
        android:id="@+id/tVStockSymbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/widget_symbol_item" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end">

        <TextView
            android:id="@+id/tVBidPrice"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/default_medium_size"
            android:paddingStart="@dimen/default_medium_size"
            android:textSize="@dimen/widget_price_item" />

        <TextView
            android:id="@+id/tVChange"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/percent_change_pill"
            android:paddingStart="@dimen/default_small_size"
            android:paddingEnd="@dimen/default_small_size"
            android:textSize="@dimen/widget_price_item" />
    </LinearLayout>
</LinearLayout>